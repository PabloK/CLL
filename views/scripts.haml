:javascript
  $(document).ready(function(){
    $('.help').mouseenter(function (){
      $(this).popover('show');
    });
    $('.help').mouseleave(function (){
      $(this).popover('hide');
    });
  });
- if @diagram
  :javascript
    $(document).ready(function(){
      $.vmouse.moveDistanceThreshold = 2
      $(".diagram-area")[0].addEventListener('touchmove', function(e){ e.preventDefault(); });
    });
-if @message
  :javascript
    $(document).ready(function(){
      $("#messageModal").modal("show");
    });
